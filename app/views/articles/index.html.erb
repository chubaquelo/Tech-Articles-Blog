<div class="container-fluid main-container">
  <div class="row h-75">

    <div class="col-12 col-md-9 bg-danger main-article-container" style="background-image: url(<%= url_for(@main_article.image) if @main_article.image.present? %>) ;">
      <h1 class="display-5 font-weight-bold mt-5"><%= link_to @main_article.title, article_path(@main_article), class: 'main-article-title' if @main_article.present? %></h1>
      <p class="display-5 font-weight-bold text-white"><%= @main_article.body if @main_article.present? %></p>
    </div>
    <div class="d-xs-none col-md-3" style="background-image: url('building.jpg'); background-size: cover;">
      <h2 class="text-white mt-4 text-center">Ad Space</h2>
    </div>

  </div>
  
  <div class="row h-25">
    <%= last_articles_per_category %>
  </div>
</div>
