<div class='col-12 col-md-6 mx-auto py-5 border text-center'>
  <h2 class='display-5 font-weight-bold mb-4'>Add new article, <%= current_user.name %> </h2>

  <%= form_with(model: @article, url: articles_path, method: :post) do |f| %>
  <!--
    <% if @article.errors.any? %>
      <% @article.errors.each do |error| %>
        <%= "Error: #{error}" %>
      <% end %>  
    <% end %>
  -->
    <div class="form-group">
      <%= f.label :title, class: 'font-weight-bold d-flex' %>
      <%= f.text_field :title, autofocus: true, autocomplete: "title", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :body, class: 'font-weight-bold d-flex' %>
      <%= f.text_area :body, autocomplete: "body", class: 'form-control' %>
    </div>

    <%= f.fields_for :categorizations do |ff| %>
      <div class="form-group">
        <%= ff.label :categories, class: 'font-weight-bold d-flex' %>
        <%= ff.select :category_id, options_for_select(@categories), {}, { required: 'true', autofocus: 'true', class: 'form-control'} %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :image, class: 'font-weight-bold d-flex' %>
      <%= f.file_field :image, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit %>
    </div>

  <% end %>

</div>